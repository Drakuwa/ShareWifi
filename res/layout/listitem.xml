<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wifitype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dip"
        android:clickable="true"
        android:src="@drawable/open"
        android:contentDescription="@string/typeofwifi" />
    
    <ImageView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dip"
        android:clickable="true"
        android:contentDescription="@string/connectbutton"
        android:src="@drawable/connect" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@id/connect"
        android:layout_toRightOf="@id/wifitype"
        android:textColor="#202020"
        android:textSize="16dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/connect"
        android:layout_toRightOf="@id/wifitype"
        android:textColor="#353535" />
    
    <TextView
        android:id="@+id/signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bssid"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/connect"
        android:layout_toRightOf="@id/wifitype"
        android:textColor="#353535" />

    <TextView
        android:id="@+id/apID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</RelativeLayout>